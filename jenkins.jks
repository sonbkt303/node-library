pipeline {
  agent { docker { image 'node:16.17.0' } }
  stages {
    stage('Check') {
      steps {
          sh 'node --version'
      }
    }

    stage('Build') {
      steps {
          sh 'npm install'
      }
    }

    stage('Run') {
      steps {
          sh 'npm start'
      }
    }

    stage('Ok') {
      steps {
          echo "Ok"
      }
    }
  }
}